<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#E5E5E5"
    tools:context="com.mcqs.anita.mcqs_android_version1.ViewQuestion">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Background"
        android:visibility="invisible"
        android:id="@+id/textViewBackground"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Core"
        android:id="@+id/textViewCore"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewEx"
        android:background="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:layout_marginBottom="2dp"
        android:layout_below="@+id/imageView">

        <TextView
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Exlanation"
            android:id="@+id/textViewExplanation"
            android:layout_below="@+id/textViewBackground"
            android:visibility="invisible"
            android:layout_above="@+id/button1"
            android:layout_alignEnd="@+id/button1"
            android:layout_toEndOf="@+id/button6" />
    </ScrollView>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:background="#FFFFFF"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewBackground"
        android:layout_above="@+id/buttonOption1"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Question"
            android:id="@+id/textViewQuestion"
            android:layout_below="@+id/progressBar2"
            android:layout_alignParentStart="true" />
    </ScrollView>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/relativeLayout">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="0dp"
        android:layout_weight=".4"
        android:layout_height="wrap_content"
        android:text="Explanation"
        android:background="#607D8B"
        android:id="@+id/buttonExplanation"
        android:enabled="false"
        android:layout_alignBottom="@+id/button6"
        android:layout_toStartOf="@+id/textViewQuestion"
        android:layout_marginRight="2dp" />

    <Button
        android:layout_width="0dp"
        android:layout_weight=".4"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="#607D8B"
        android:id="@+id/buttonNext"
        android:layout_alignBottom="@+id/buttonExplanation"
        android:layout_alignEnd="@+id/button5"
        android:layout_marginLeft="2dp" />
</LinearLayout>
    </RelativeLayout>
    <!-- android:textSize="12sp"-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 5"
        android:background="#D8D8D8"
        android:id="@+id/buttonOption5"

        android:layout_above="@+id/relativeLayout"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 4"
        android:background="#D8D8D8"
        android:id="@+id/buttonOption4"
        android:layout_above="@+id/buttonOption5"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 3"
        android:background="#D8D8D8"
        android:id="@+id/buttonOption3"
        android:layout_above="@+id/buttonOption4"
        android:layout_marginBottom="5dp"
        android:layout_alignEnd="@+id/buttonOption4"
        android:layout_toEndOf="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 2"
        android:background="#D8D8D8"
        android:paddingBottom="20px"
        android:id="@+id/buttonOption2"
        android:layout_above="@+id/buttonOption3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_alignEnd="@+id/buttonOption3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option 1"
        android:background="#D8D8D8"
        android:id="@+id/buttonOption1"
        android:paddingBottom="20px"
        android:layout_above="@+id/buttonOption2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_alignEnd="@+id/scrollView" />

    <ProgressBar
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_alignBottom="@+id/textViewBackground"
        android:layout_alignEnd="@+id/scrollViewEx"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:progressDrawable="@drawable/progressbar2"/>




</RelativeLayout>
